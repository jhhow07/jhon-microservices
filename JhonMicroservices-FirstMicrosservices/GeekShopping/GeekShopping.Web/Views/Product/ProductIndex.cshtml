@model IEnumerable<GeekShopping.Web.Models.ProductViewModel>

<br />
<br />
<div class="container p-4 border d-flex flex-column">
    <div class="d-flex">
        <div class="col">
            <h1 class="text-primary">Products List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-primary">
                <i class="fas fa-plus"></i> Create New Product
            </a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    CategoryName
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.CategoryName
                    </td>
                    <td class="d-flex justify-content-between">
                        @((item.Price).ToString("c"))

                        <div class="pe-md-5">
                            <a asp-action="ProductUpdate" class="btn btn-success" asp-route-id="@item.Id">
                                <i class="fas fa-edit"></i>
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="ProductDelete" class="btn btn-danger" asp-route-id="@item.Id">
                                    <i class="fas fa-trash"></i>
                                </a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>